<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header">プロジェクト詳細</div>
        <div class="card-body">
            <!-- プロジェクト情報 -->
            <h5 class="card-title"><%= project.title %></h5>
            <p class="card-text"><%= project.description %></p>

            <%- include('newForm.ejs') %>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                <div class="col">
                    <%- include('../partials/taskCard.ejs', { tasks:inProgress,
                    status: taskStatus.IN_PROGRESS }) %>
                </div>
                <div class="col">
                    <div class="col">
                        <%- include('../partials/taskCard.ejs', {
                        tasks:notStarted, status: taskStatus.NOT_STARTED }) %>
                    </div>
                </div>
                <div class="col">
                    <div class="col">
                        <%- include('../partials/taskCard.ejs', {
                        tasks:completed, status: taskStatus.COMPLETED }) %>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer bg-transparent">
            <a
                href="/projects/<%= project._id %>/edit"
                class="btn btn-primary me-2"
            >
                編集する
            </a>
            <form
                action="/projects/<%= project._id %>?_method=DELETE"
                method="POST"
                class="d-inline"
            >
                <button type="submit" class="btn btn-danger">削除する</button>
            </form>
        </div>
    </div>
</div>
