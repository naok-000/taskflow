<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-4">
    <h1 class="mb-4">タスク編集</h1>
    <form action="/tasks/<%= task._id %>?_method=PATCH" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">タイトル</label>
            <input
                type="text"
                id="title"
                name="task[title]"
                value="<%= task.title %>"
                class="form-control"
                required
            />
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">詳細</label>
            <textarea
                id="description"
                name="task[description]"
                class="form-control"
                rows="4"
            >
<%= task.description %></textarea
            >
        </div>
        <div class="mb-3">
            <label class="form-label d-block">ステータス</label>
            <% Object.entries(taskStatus).forEach(([key, value]) => { %>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="task[status]"
                id="status-<%= key %>" value="<%= value %>" <%= task.status ===
                value ? "checked" : "" %> />
                <label class="form-check-label" for="status-<%= key %>"
                    ><%= value %></label
                >
            </div>
            <% }); %>
        </div>
        <button type="submit" class="btn btn-primary">更新</button>
        <a href="/tasks/<%= task._id %>" class="btn btn-secondary ms-2"
            >キャンセル</a
        >
    </form>
</div>
