<% layout('layouts/boilerplate.ejs') %>
<div class="container mt-4">
    <div class="card">
        <div class="card-header">タスク詳細</div>
        <div class="card-body">
            <h5 class="card-title"><%= task.title %></h5>
            <p class="card-text"><%= task.description %></p>
            <p class="card-text">
                <small class="text-muted">ステータス: <%= task.status %></small>
            </p>
            <a href="/tasks/<%= task._id %>/edit" class="btn btn-primary"
                >編集</a
            >
            <form
                action="/tasks/<%= task._id %>?_method=DELETE"
                method="post"
                class="d-inline"
            >
                <button type="submit" class="btn btn-danger">削除</button>
            </form>
        </div>
    </div>
</div>
