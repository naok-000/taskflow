<!-- ホーム画面 -->
<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>TaskFlow - ホーム</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
            crossorigin="anonymous"
        />
        <!-- Bootstrap Icons -->
        <link
            rel="stylesheet"
            href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
        />
        <style>
            header {
                background: url("https://images.unsplash.com/photo-1578852612716-854e527abf2e?w=600&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NXx8dGFza3xlbnwwfHwwfHx8Mg%3D%3D")
                    center/cover no-repeat;
            }
        </style>
    </head>
    <body class="d-flex flex-column vh-100">
        <!-- Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="/">TaskFlow</a>
                <button
                    class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarNav"
                    aria-controls="navbarNav"
                    aria-expanded="false"
                    aria-label="ナビゲーションの切替"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div
                    class="collapse navbar-collapse justify-content-end"
                    id="navbarNav"
                >
                    <ul class="navbar-nav">
                        <% if (currentUser) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/projects"
                                >プロジェクト一覧</a
                            >
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/logout">ログアウト</a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">ログイン</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/register"
                                >ユーザー登録</a
                            >
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </nav>

        <!-- Hero Section -->
        <header class="bg-dark text-white text-center py-5">
            <div class="container">
                <h1 class="display-4 fw-bold">Welcome to TaskFlow</h1>
                <p class="lead">
                    あなたのプロジェクトとタスクを美しく管理するためのプラットフォーム
                </p>
                <div class="mt-4">
                    <% if (currentUser) { %>
                    <a href="/projects" class="btn btn-success btn-lg"
                        >プロジェクト一覧</a
                    >
                    <% } else { %>
                    <a href="/login" class="btn btn-primary btn-lg me-3"
                        >ログイン</a
                    >
                    <a href="/register" class="btn btn-outline-light btn-lg"
                        >ユーザー登録</a
                    >
                    <% } %>
                </div>
            </div>
        </header>

        <!-- Features Section -->
        <section class="py-5">
            <div class="container">
                <div class="row text-center g-4">
                    <!-- プロジェクト管理 -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-kanban display-4 mb-3"></i>
                                <h5 class="card-title">プロジェクト管理</h5>
                                <p class="card-text">
                                    シンプルで使いやすいダッシュボードで、プロジェクトの全体像を把握できます。
                                </p>
                            </div>
                        </div>
                    </div>
                    <!-- タスク管理 -->
                    <div class="col-md-6">
                        <div class="card h-100 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-list-check display-4 mb-3"></i>
                                <h5 class="card-title">タスク管理</h5>
                                <p class="card-text">
                                    タスクの進捗を未着手、進行中、完了の状態で簡単に追跡できます。
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Footer -->
        <%- include('./partials/footer') %>

        <!-- Bootstrap JS and Form Validation Script -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"
        ></script>
        <script src="/javascripts/validateForms.js"></script>
    </body>
</html>
